###########################################################
# CONFIG
###########################################################

setuid <%= @user %>
setgid <%= @group %>

#
# env variables are available to the job and script...end script clauses only
# exported vairables are also available to the job process itself
#

env ADDRESS="<%= @address %>:<%= @port %>"
env PHP_CHILDREN="<%= @children %>"
env PHP_MAX_REQUESTS="<%= @max_requests %>"
export PHP_CHILDREN
export PHP_MAX_REQUESTS

# uncomment to disable automatic startup<% if @start %>
#manual<% else %>manual<% end %>

###########################################################
# JOB
###########################################################

start on <%= @start_on %>
stop on runlevel [016]
<% if @respawn %>
respawn
respawn limit <%= @respawn_limit %>
<% end %>
exec php5-cgi <%= @options %> "$ADDRESS"
